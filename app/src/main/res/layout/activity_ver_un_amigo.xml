<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202124"
    tools:context=".VerUnAmigoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/atras"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="#24613e"
            android:text="< Atrás" />

        <TextView
            android:id="@+id/amigos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textSize="30dp"
            android:text="Nombre_amigo"
            android:textAlignment="center"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:id="@+id/circleImageView"
            android:layout_marginTop="30dp"
            android:layout_width="149dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@android:color/white"
            app:civ_image_scaleType="centerCrop"
            tools:srcCompat="@drawable/perfil" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Usuario"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Correo"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Últimos entrenos"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/entreno1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

        <TextView
            android:id="@+id/entreno2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

        <TextView
            android:id="@+id/entreno3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>