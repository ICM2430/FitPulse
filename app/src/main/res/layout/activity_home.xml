<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202124"
    tools:context=".HomeActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/config"
        android:layout_width="49dp"
        android:layout_height="53dp"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@drawable/settings"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_slab_semibold"
        android:textSize="30dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="262dp"
        app:srcCompat="@drawable/nature_bici" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_slab_semibold"
        android:textSize="30dp"
        android:text="¿Qué quieres hacer hoy?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/mi_perfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#24bb64"
            android:text="Mi perfil"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/iniciar_actividad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#24bb64"
            android:text="Iniciar Entrenamiento" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/ver_historial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#24bb64"
            android:text="Ver historial" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/ver_amigos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#24bb64"
            android:text="Ver a mis amigos" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/compartir_entreno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#24bb64"
            android:text="Compartir mi entrenamiento" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#24613e"
            android:text="Cerrar Sesión" />

    </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>