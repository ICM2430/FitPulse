<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiPerfilActivity"
    android:background="#202124">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón Atrás -->
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/atras"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="#24613e"
            android:text="Atrás" />

        <!-- Título -->

        <!-- Imagen de perfil -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="timmana"
            android:text="FitPulse"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            tools:fontFamily="@font/timmana" />

        <ImageView
            android:id="@+id/circleImageView"
            android:layout_width="149dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            android:src="@drawable/perfil"
            android:onClick="changeProfilePicture"/>

        <!-- Usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Usuario"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

        <!-- Nombre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Nombre"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

        <!-- Apellido -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Apellido"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>

        <!-- Correo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Correo"
            android:fontFamily="@font/roboto_slab_semibold"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_semibold"
            android:background="#24613e"
            android:text="-"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>